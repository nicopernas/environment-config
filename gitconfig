[core]
  excludesfile = ~/.env-config/gitignore_global
  pager = less -FRSX
  editor = vim -f
  autocrlf = input
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[user]
  name = Nicolás Pernas Maradei

[github]
  user = nicopernas

[color]
  diff = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true
  status = auto

[color "status"]
  added = green
  changed = blue
  untracked = magenta
  deleted = red

[color "branch"]
  current = magenta
  local = yellow
  remote = green

[color "diff"]
  meta = yellow
  frag = magenta
  old = red
  new = green

[push]
  default = current

[help]
  autocorrect = 1

[diff]
  tool = meld
  guitool = meld

[merge]
  tool = meld

[difftool]
  prompt = false

[mergetool]
  keepBackup = false
  prompt = false

[alias]
  mylog = log --author='Nicolás Pernas Maradei' --oneline
  today = log --author='Nicolás Pernas Maradei' --oneline --since=midnight
  unstage = reset HEAD --
  last = log -1 HEAD
  ci = commit
  sci = commit -s
  co = checkout
  st = status
  lg = log --graph --pretty=format:'%C(yellow)%h%Cred%d%Creset %s %C(white)%C(cyan)%an%Creset, %C(green)%ar%Creset'
  fork = checkout -b
  undo = checkout --
  back = checkout -
  diffc = diff --cached
  pullr = pull --rebase
  diffw = diff --color-words
